{
  "name": "silverback",
  "private": true,
  "workspaces": [
    "packages/composer/*/*",
    "packages/npm/*",
    "apps/*"
  ],
  "scripts": {
    "commit": "yarn git-cz",
    "test": "yarn lerna run test"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "commitizen": "^4.1.2",
    "husky": "^4.2.5",
    "lerna": "^3.22.1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
