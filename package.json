{
  "name": "silverback",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/composer/*/*",
      "packages/npm/*",
      "packages/npm/*/*",
      "packages/tests/*",
      "apps/*",
      "apps/silverback-drupal/config/*",
      "apps/silverback-drupal/web/modules/custom/*",
      "packages/composer/drupal/test_session/tests/Cypress"
    ],
    "nohoist": ["**/webpack", "**/react-refresh-webpack-plugin"]
  },
  "scripts": {
    "commit": "yarn git-cz",
    "test:static": "yarn lerna run test:static --since",
    "test:unit": "yarn lerna run test:unit --since",
    "test:integration": "yarn lerna run test:integration --since --stream --concurrency=1",
    "test-all": "yarn lerna run test --stream --concurrency=1",
    "git-registry": "yarn verdaccio -c config.yml",
    "make-sp-test-bin-available-in-monorepo": "rm -rf packages/npm/@amazeelabs/silverback-playwright/dist && mkdir -p packages/npm/@amazeelabs/silverback-playwright/dist/src && echo '' > packages/npm/@amazeelabs/silverback-playwright/dist/src/test-package.js",
    "preinstall": "yarn make-sp-test-bin-available-in-monorepo",
    "postinstall": "lerna run prepare && husky install && rm -rf node_modules/@-*"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.0.0",
    "@commitlint/config-conventional": "^13.0.0",
    "commitizen": "^4.2.2",
    "husky": "^7.0.0",
    "lerna": "^4.0.0",
    "verdaccio": "^5.0.0",
    "verdaccio-git": ">= 0.0.1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lerna run --concurrency 1 --stream precommit --since HEAD --exclude-dependents"
    }
  },
  "dependencies": {
    "prettier": "^2.1.2"
  },
  "resolutions": {
    "node-sass": "^6",
    "@graphql-tools/load": "^7"
  }
}
