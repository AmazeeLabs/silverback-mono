{
  "name": "silverback",
  "private": true,
  "workspaces": [
    "packages/composer/*/*",
    "packages/npm/*",
    "packages/npm/*/*",
    "packages/tests/*",
    "apps/*",
    "apps/silverback-drupal/config/*",
    "apps/silverback-drupal/web/modules/custom/*",
    "packages/composer/drupal/test_session/tests/Cypress"
  ],
  "scripts": {
    "commit": "yarn git-cz",
    "test": "yarn lerna run prepublish --since --include-dependencies && yarn lerna run test --since --stream --concurrency=1",
    "test-all": "yarn lerna run prepublish --include-dependencies && yarn lerna run test --stream --concurrency=1",
    "git-registry": "yarn verdaccio -c config.yml",
    "postinstall": "lerna run prepare && husky install && rm -rf node_modules/@-*"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.0.0",
    "@commitlint/config-conventional": "^13.0.0",
    "commitizen": "^4.2.2",
    "husky": "^7.0.0",
    "lerna": "^4.0.0",
    "verdaccio": "^5.0.0",
    "verdaccio-git": ">= 0.0.1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lerna run --concurrency 1 --stream precommit --since HEAD --exclude-dependents"
    }
  },
  "dependencies": {
    "prettier": "^2.1.2"
  }
}
