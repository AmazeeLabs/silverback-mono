{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@atoms/*": ["./src/components/0-atoms/*"],
      "@molecules/*": ["./src/components/1-molecules/*"],
      "@organisms/*": ["./src/components/2-organisms/*"],
      "@layouts/*": ["./src/components/3-layouts/*"],
      "@pages/*": ["./src/components/4-pages/*"],
      "@hooks": ["./src/hooks"],
      "@dependencies": ["./src/components/dependencies"]
    }
  },
  "include": [
    "./src",
    "./generated",
    "gatsby-node.ts",
    "gatsby-config.ts",
    "gatsby-browser.ts",
    "gatsby-ssr.ts"
  ],
  "exclude": ["node_modules"],
  "ts-node": {
    "transpileOnly": true
  }
}
