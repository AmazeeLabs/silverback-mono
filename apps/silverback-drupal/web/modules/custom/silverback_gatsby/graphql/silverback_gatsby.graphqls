schema {
  query: Query
}

type Change {
  type: ChangeType!
  id: String!
}

enum ChangeType {
  Update
  Delete
}

interface Translatable {
  id: String!
  translations: [Translation!]!
}

interface Translation {
  langcode: String!
}

type Query {
  page(id: String!): Page
  pages(
    offset: Int!
    limit: Int!
  ): [Page!]!
  pageChanges(since: Int!, ids: [String!]!): [Change!]!

  gutenbergPage(id: String!): GutenbergPage
  gutenbergPages(
    offset: Int!
    limit: Int!
  ): [GutenbergPage!]!
  gutenbergPageChanges(since: Int!, ids: [String!]!): [Change!]!

  article(id: String!): Article
  articles(
    offset: Int!
    limit: Int!
  ): [Article!]!
  articleChanges(since: Int!, ids: [String!]!): [Change!]!

  image(id: String!): Image
  images(
    offset: Int!
    limit: Int!
  ): [Image!]!
  imageChanges(since: Int!, ids: [String!]!): [Change!]!

  tag(id: String!): Tag
  tags(
    offset: Int!
    limit: Int!
  ): [Tag!]!
  tagChanges(since: Int!, ids: [String!]!): [Change!]!
}
type Image {
  id: String!
}

type Tag {
  id: String!
}

type Page implements Translatable {
  id: String!
  translations: [PageTranslation!]!
}

type PageTranslation implements Translation {
  langcode: String!
}

type GutenbergPage implements Translatable {
  id: String!
  translations: [GutenbergPageTranslation!]!
}

type GutenbergPageTranslation implements Translation {
  langcode: String!
}

type Article implements Translatable {
  id: String!
  translations: [ArticleTranslation!]!
}

type ArticleTranslation implements Translation {
  langcode: String!
}
