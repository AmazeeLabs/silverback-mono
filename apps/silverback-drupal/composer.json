{
    "name": "drupal/recommended-project",
    "description": "Project template for Drupal 9 projects with a relocated document root",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "homepage": "https://www.drupal.org/project/drupal",
    "support": {
        "docs": "https://www.drupal.org/docs/user_guide/en/index.html",
        "chat": "https://www.drupal.org/node/314178"
    },
    "repositories": [
        {
            "type": "path",
            "url": "../../packages/composer/*/*"
        },
        {
            "type": "package",
            "package": {
                "name": "drupal/content_sync",
                "version": "dev-main",
                "type": "drupal-module",
                "minimum-stability": "dev",
                "require": {
                    "drupal/core": "^8.8 || ^9"
                },
                "extra": {
                    "drush": {
                        "services": {
                            "drush.services.yml": "^9 || ^10"
                        }
                    }
                },
                "source": {
                    "type": "git",
                    "url": "https://git.drupalcode.org/project/content_sync.git",
                    "reference": "8.x-2.x"
                }
            }
        },
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "amazeelabs/silverback-cli": "@dev",
        "composer/installers": "^1.9",
        "cweagans/composer-patches": "^1.7",
        "drupal/admin_toolbar": "^3.0",
        "drupal/content_sync": "dev-main#5164f8a88149eea74e92808884dd9d04335d6d40",
        "drupal/core": "^9.0",
        "drupal/core-composer-scaffold": "^9",
        "drupal/core-dev": "^9.0",
        "drupal/core-project-message": "^9",
        "drupal/core-recommended": "^9",
        "drupal/cypress": "@dev",
        "drupal/cypress-dev": "@dev",
        "drupal/gatsby": "^1.0@RC",
        "drupal/gatsby_build_monitor": "dev-development",
        "drupal/graphql": "^4",
        "phpspec/prophecy-phpunit": "^2"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            }
        },
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/Commands/contrib/{$name}": [
                "type:drupal-drush"
            ],
            "web/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "web/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ]
        },
        "drupal-core-project-message": {
            "include-keys": [
                "homepage",
                "support"
            ],
            "post-create-project-cmd-message": [
                "<bg=blue;fg=white>                                                         </>",
                "<bg=blue;fg=white>  Congratulations, youâ€™ve installed the Drupal codebase  </>",
                "<bg=blue;fg=white>  from the drupal/recommended-project template!          </>",
                "<bg=blue;fg=white>                                                         </>",
                "",
                "<bg=yellow;fg=black>Next steps</>:",
                "  * Install the site: https://www.drupal.org/docs/8/install",
                "  * Read the user guide: https://www.drupal.org/docs/user_guide/en/index.html",
                "  * Get support: https://www.drupal.org/support",
                "  * Get involved with the Drupal community:",
                "      https://www.drupal.org/getting-involved",
                "  * Remove the plugin that prints this message:",
                "      composer remove drupal/core-project-message"
            ]
        },
        "enable-patching": true,
        "composer-exit-on-patch-failure": true,
        "patches": {
            "drupal/content_sync": {
                "D9 support": "https://www.drupal.org/files/issues/2020-12-22/3114499-34.patch"
            },
            "drupal/gatsby": {
                "Build on unpublishing": "patches/drupal/gatsby/3188480--2020-12-15T10-24--adopted.patch"
            }
        },
        "merge-plugin": {
            "include": [
                "packages/composer.json"
            ],
            "replace": true
        }
    },
    "scripts": {
        "run-tests": [
            "if [ -d web/modules/custom ]; then phpunit web/modules/custom; fi",
            "yarn install && CYPRESS_TAGS=@COMPLETED cypress run"
        ]
    }
}
