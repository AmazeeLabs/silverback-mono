{
    "name": "drupal/recommended-project",
    "description": "Project template for Drupal 9 projects with a relocated document root",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "homepage": "https://www.drupal.org/project/drupal",
    "support": {
        "docs": "https://www.drupal.org/docs/user_guide/en/index.html",
        "chat": "https://www.drupal.org/node/314178"
    },
    "repositories": [
        {
            "type": "path",
            "url": "../../packages/composer/*/*"
        },
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "amazeelabs/proxy-drupal-core": "^1.1",
        "amazeelabs/proxy-gutenberg": "^1.1",
        "amazeelabs/silverback-cli": "@dev",
        "amazeelabs/silverback_external_preview": "^1.1",
        "amazeelabs/silverback_gatsby": "^1.14",
        "amazeelabs/silverback_gutenberg": "^1.3",
        "amazeelabs/silverback_iframe": "^1.1",
        "amazeelabs/silverback_iframe_theme": "^1.1",
        "composer/installers": "^2.0",
        "cweagans/composer-patches": "^1.7",
        "drupal/admin_toolbar": "^3.0",
        "drupal/config_split": "^1.7",
        "drupal/core": "^9.3",
        "drupal/core-composer-scaffold": "^9",
        "drupal/core-dev": "^9.3",
        "drupal/core-recommended": "^9",
        "drupal/cypress": "@dev",
        "drupal/default_content": "^2.0@alpha",
        "drupal/gatsby_build_monitor": "@dev",
        "drupal/graphql": "^4",
        "drupal/gutenberg": "^2.2",
        "drupal/test_session": "@dev",
        "drupal/webform": "^6.1",
        "phpspec/prophecy-phpunit": "^2"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true,
            "cweagans/composer-patches": true,
            "drupal/core-composer-scaffold": true
        }
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            }
        },
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/Commands/contrib/{$name}": [
                "type:drupal-drush"
            ],
            "web/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "web/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ]
        },
        "enable-patching": true,
        "composer-exit-on-patch-failure": true
    },
    "scripts": {
        "run-tests": [
            "if [ -d web/modules/custom ]; then phpunit web/modules/custom; fi",
            "yarn install && CYPRESS_TAGS=@COMPLETED cypress run"
        ]
    }
}
