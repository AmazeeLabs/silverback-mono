{
  "name": "@-amazeelabs/silverback-gatsby-tests",
  "version": "1.1.1",
  "description": "e2e tests for Drupal-Gatsby connection.",
  "author": "Amazee Labs",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@-amazeelabs/silverback_gatsby": "^1.11.4",
    "@amazeelabs/gatsby-source-silverback": "^1.4.20",
    "@amazeelabs/silverback-playwright": "^1.5.1"
  },
  "devDependencies": {
    "@amazeelabs/eslint-config": "^1.4.6",
    "@amazeelabs/jest-preset": "^1.3.12",
    "@amazeelabs/prettier-config": "^1.1.1",
    "@types/jest": "^27",
    "eslint": "^7",
    "jest": "^27",
    "lint-staged": "^11.1.2",
    "prettier": "^2",
    "ts-jest": "^27",
    "typescript": "^4.4.4"
  },
  "scripts": {
    "prepare": "exit 0",
    "precommit": "lint-staged",
    "test": "yarn test:static && yarn test:unit && yarn test:integration",
    "watch": "jest --watch",
    "test:static": "tsc --noEmit && eslint \"**/*.{ts,tsx,js,jsx}\" --ignore-path=\"./.gitignore\" --fix",
    "test:unit": "jest --passWithNoTests",
    "test:integration": "if [ -f test.sh ]; then ./test.sh; fi && sp-test",
    "test:watch": "jest --watch"
  }
}
