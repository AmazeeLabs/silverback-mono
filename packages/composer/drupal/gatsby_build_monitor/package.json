{
  "name": "@-drupal/gatsby_build_monitor",
  "version": "1.4.12",
  "description": "Notifies about the Gatsby Build Status via the Toolbar.",
  "publishConfig": {
    "access": "public",
    "registry": "http://localhost:4873",
    "repository": "git@git.drupal.org:project/gatsby_build_monitor.git",
    "branch": "main"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@amazeelabs/silverback-playwright": "^1.6.8",
    "@types/jest": "^27",
    "eslint": "^8",
    "jest": "^27",
    "lint-staged": "^12.1.5",
    "prettier": "^2",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@amazeelabs/eslint-config": "^1.4.8",
    "@amazeelabs/jest-preset": "^1.3.13",
    "@amazeelabs/prettier-config": "^1.1.1",
    "@amazeelabs/sync-composer-version": "^1.1.2"
  },
  "scripts": {
    "prepare": "exit 0",
    "precommit": "lint-staged",
    "test": "yarn test:static && yarn test:unit && yarn test:integration",
    "watch": "jest --watch",
    "version": "sync-composer-version",
    "test:static": "tsc --noEmit && eslint \"**/*.{ts,tsx,js,jsx}\" --ignore-path=\"./.gitignore\" --fix",
    "test:unit": "jest --passWithNoTests",
    "test:integration": "if [ -f test.sh ]; then ./test.sh; fi && sp-test",
    "test:watch": "jest --watch"
  }
}
