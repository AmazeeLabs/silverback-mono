{{ attach_library('silverback_external_preview/iframe_preview') }}
<div class="external-preview-entity">
  {% if view_live_link %}
    <div class="external-preview-entity__public-link">
      <a href="{{ live_url }}" target="_blank">{{ '🌐 Public version ↗' | t }}</a>
    </div>
  {% endif %}
  <iframe class="external-preview-entity__iframe" width="{{ width }}" height="{{ height }}" src="{{ preview_url }}" allowfullscreen></iframe>
</div>
