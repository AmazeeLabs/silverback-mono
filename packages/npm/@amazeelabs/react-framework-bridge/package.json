{
  "name": "@amazeelabs/react-framework-bridge",
  "version": "2.3.0",
  "description": "Bridge code to implement framework independent react components.",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./gatsby": {
      "import": "./dist/gatsby.js",
      "require": "./dist/gatsby.cjs"
    },
    "./storybook": {
      "import": "./dist/storybook.js",
      "require": "./dist/storybook.cjs"
    }
  },
  "typesVersions": {
    "*": {
      "index": [
        "./dist/index.d.ts"
      ],
      "storybook": [
        "./dist/storybook.d.ts"
      ],
      "gatsby": [
        "./dist/gatsby.d.ts"
      ]
    }
  },
  "types": "./dist/index.d.ts",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "author": "Amazee Labs",
  "license": "MIT",
  "private": false,
  "sideEffects": false,
  "dependencies": {
    "hast-util-has-property": "^2.0.0",
    "hast-util-is-element": "^2.1.2",
    "hast-util-select": "^5.0.2",
    "lodash": "^4.17.21",
    "qs": "^6.10.5",
    "react-error-boundary": "^3.1.4",
    "rehype-add-classes": "^1.0.0",
    "rehype-parse": "^8.0.4",
    "rehype-react": "^7.1.1",
    "rehype-slug": "^5.0.1",
    "unified": "^10.1.2",
    "unist-util-modify-children": "^3.0.0",
    "unist-util-visit": "^4.1.1"
  },
  "peerDependencies": {
    "@storybook/addon-actions": ">=6.5.12",
    "formik": ">=2.2.9",
    "gatsby": ">=4.24.4",
    "gatsby-plugin-image": ">=2.24.0",
    "react": ">=18.2.0",
    "react-dom": ">=18.2.0",
    "react-intl": "*",
    "yup": ">=0.32.11"
  },
  "devDependencies": {
    "@amazeelabs/eslint-config": "^1.4.35",
    "@amazeelabs/prettier-config": "^1.1.1",
    "@rollup/plugin-commonjs": "22.0.2",
    "@rollup/plugin-multi-entry": "4.1.0",
    "@rollup/plugin-node-resolve": "14.1.0",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/user-event": "14.4.3",
    "@types/qs": "6.9.7",
    "@types/react": "18.0.21",
    "@types/react-dom": "18.0.6",
    "@vitejs/plugin-react": "2.1.0",
    "esbuild": "0.15.10",
    "eslint": "8.25.0",
    "formik": "2.2.9",
    "gatsby": "4.24.4",
    "gatsby-plugin-image": "2.24.0",
    "jsdom": "20.0.1",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "react-intl": "6.2.0",
    "rollup": "2.79.1",
    "rollup-plugin-dts": "4.2.3",
    "rollup-plugin-esbuild": "4.10.1",
    "rollup-plugin-multi-input": "1.3.1",
    "typescript": "4.8.4",
    "vite": "3.1.8",
    "vite-plugin-dts": "1.6.5",
    "vitest": "0.24.1",
    "zustand": "4.1.2"
  },
  "scripts": {
    "prepare": "yarn build",
    "build": "yarn build:index && yarn build:gatsby && yarn build:storybook",
    "build:index": "ENTRYPOINT=index vite build",
    "build:gatsby": "ENTRYPOINT=gatsby vite build",
    "build:storybook": "ENTRYPOINT=storybook vite build",
    "dev": "vite build --watch",
    "precommit": "lint-staged",
    "test": "yarn test:static && yarn test:unit && yarn test:integration",
    "test:static": "tsc --noEmit && eslint \"**/*.{ts,tsx,js,jsx}\" --ignore-path=\"./.gitignore\" --fix",
    "test:unit": "vitest run",
    "test:integration": "exit 0",
    "test:watch": "vitest"
  },
  "publishConfig": {
    "access": "public"
  }
}
