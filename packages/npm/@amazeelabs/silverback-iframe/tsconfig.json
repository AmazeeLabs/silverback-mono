{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "target": "ES2015",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": false,
    "jsx": "react"
  },
  "exclude": [
    "./dist",
    "src/**/__tests__/**"
  ],
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended"
}
