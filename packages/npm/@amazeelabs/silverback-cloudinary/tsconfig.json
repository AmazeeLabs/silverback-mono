{
  "compilerOptions": {
    "noEmit": false,
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": false,
    "jsx": "react",
    "outDir": ".",
    "rootDir": "src"
  },
  "exclude": ["node_modules", "playwright-tests"],
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended"
}
