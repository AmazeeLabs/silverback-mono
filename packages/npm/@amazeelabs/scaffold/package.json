{
  "name": "@amazeelabs/scaffold",
  "version": "1.3.55",
  "description": "Scaffold dotfiles and packages for JS projects.",
  "main": "index.js",
  "author": "Philipp Melab",
  "license": "MIT",
  "private": false,
  "bin": "./cli.js",
  "files": [
    "files/.gitignore",
    "files/.eslintrc.js",
    "files/.lintstagedrc",
    "files/.prettierrc",
    "files/jest.config.js",
    "files/tsconfig.json"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "precommit": "lint-staged",
    "prepare": "rollup -c rollup.config.ts",
    "watch": "jest --watch",
    "test:static": "tsc --noEmit && eslint \"**/*.{ts,tsx,js,jsx}\" --ignore-path=\"./.gitignore\" --fix",
    "test:unit": "jest --passWithNoTests",
    "test:integration": "yarn prepare &&  ./test.sh",
    "test:watch": "jest --watch",
    "test": "yarn test:static && yarn test:unit && yarn test:integration"
  },
  "devDependencies": {
    "@amazeelabs/eslint-config": "^1.4.30",
    "@amazeelabs/jest-preset": "^1.3.34",
    "@amazeelabs/prettier-config": "^1.1.1",
    "@rollup/plugin-commonjs": "22.0.1",
    "@rollup/plugin-json": "4.1.0",
    "@rollup/plugin-node-resolve": "13.3.0",
    "@rollup/plugin-typescript": "8.3.3",
    "@types/chalk": "2.2.0",
    "@types/jest": "28.1.6",
    "@types/mock-fs": "4.13.1",
    "@types/node": "16.11.45",
    "chalk": "4.1.2",
    "eslint": "8.20.0",
    "husky": "8.0.1",
    "jest": "28.1.3",
    "lint-staged": "13.0.3",
    "mock-fs": "5.1.2",
    "rollup": "2.77.0",
    "ts-jest": "28.0.7",
    "typescript": "4.7.4"
  }
}
