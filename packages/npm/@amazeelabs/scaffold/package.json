{
  "name": "@amazeelabs/scaffold",
  "version": "1.3.66",
  "description": "Scaffold dotfiles and packages for JS projects.",
  "main": "index.js",
  "author": "Philipp Melab",
  "license": "MIT",
  "private": false,
  "bin": "./cli.js",
  "files": [
    "files/.gitignore",
    "files/.eslintrc.js",
    "files/.lintstagedrc",
    "files/.prettierrc",
    "files/jest.config.js",
    "files/tsconfig.json"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "precommit": "lint-staged",
    "prepare": "rollup -c rollup.config.ts --configPlugin typescript",
    "watch": "jest --watch",
    "test:static": "tsc --noEmit && eslint \"**/*.{ts,tsx,js,jsx}\" --ignore-path=\"./.gitignore\" --fix",
    "test:unit": "jest --passWithNoTests",
    "test:integration": "./test.sh",
    "test:watch": "jest --watch",
    "test": "yarn test:static && yarn test:unit && yarn test:integration"
  },
  "devDependencies": {
    "@amazeelabs/eslint-config": "^1.4.37",
    "@amazeelabs/jest-preset": "^1.3.41",
    "@amazeelabs/prettier-config": "^1.1.1",
    "@rollup/plugin-commonjs": "23.0.7",
    "@rollup/plugin-json": "5.0.2",
    "@rollup/plugin-node-resolve": "15.0.1",
    "@rollup/plugin-typescript": "10.0.1",
    "@types/chalk": "2.2.0",
    "@types/jest": "29.2.4",
    "@types/mock-fs": "4.13.1",
    "@types/node": "16.18.11",
    "eslint": "8.30.0",
    "husky": "8.0.2",
    "jest": "29.3.1",
    "lint-staged": "13.1.0",
    "mock-fs": "5.2.0",
    "rollup": "3.9.0",
    "ts-jest": "29.0.3",
    "typescript": "4.9.4"
  }
}
