{
  "name": "@amazeelabs/scaffold",
  "version": "1.3.34",
  "description": "Scaffold dotfiles and packages for JS projects.",
  "main": "index.js",
  "author": "Philipp Melab",
  "license": "MIT",
  "private": false,
  "bin": "./cli.js",
  "files": [
    "files/.gitignore",
    "files/.eslintrc.js",
    "files/.lintstagedrc",
    "files/.prettierrc",
    "files/jest.config.js",
    "files/tsconfig.json"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "precommit": "lint-staged",
    "prepare": "rollup -c rollup.config.ts",
    "watch": "jest --watch",
    "test:static": "tsc --noEmit && eslint \"**/*.{ts,tsx,js,jsx}\" --ignore-path=\"./.gitignore\" --fix",
    "test:unit": "jest --passWithNoTests",
    "test:integration": "yarn prepare &&  ./test.sh",
    "test:watch": "jest --watch",
    "test": "yarn test:static && yarn test:unit && yarn test:integration"
  },
  "devDependencies": {
    "@amazeelabs/eslint-config": "^1.4.12",
    "@amazeelabs/jest-preset": "^1.3.16",
    "@amazeelabs/prettier-config": "^1.1.1",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/chalk": "^2.2.0",
    "@types/jest": "^27.4.0",
    "@types/mock-fs": "^4.13.1",
    "@types/node": "^16.11.21",
    "chalk": "^4.1.2",
    "eslint": "^8.7.0",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "lint-staged": "^12.2.1",
    "mock-fs": "^5.1.2",
    "rollup": "^2.64.0",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.4"
  }
}
