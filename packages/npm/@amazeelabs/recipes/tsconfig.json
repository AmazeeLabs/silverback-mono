{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "noEmit": false,
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": false,
    "jsx": "react"
  },
  "exclude": ["tmp"],
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended"
}
