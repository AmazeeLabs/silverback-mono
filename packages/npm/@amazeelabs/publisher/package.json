{
  "name": "@amazeelabs/publisher",
  "version": "2.5.5",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/exports.cjs",
  "types": "./dist/exports.d.ts",
  "bin": "./bin/publisher.js",
  "scripts": {
    "build": "rollup -c rollup.config.ts --configPlugin typescript",
    "watch": "pnpm build --watch",
    "publisher": "node ./dist/cli.js",
    "start": "nodemon ./dist/cli.js",
    "test:static": "tsc --noEmit && eslint \"**/*.{ts,tsx,js,jsx}\" --ignore-path=\"./.gitignore\" --fix",
    "test:unit": "vitest run --retry=3",
    "test:integration": "exit 0"
  },
  "dependencies": {
    "@amazeelabs/publisher-shared": "workspace:*",
    "@amazeelabs/publisher-ui": "workspace:*",
    "@slack/webhook": "^7.0.2",
    "cookie-parser": "1.4.6",
    "cors": "^2.8.5",
    "express": "4.19.2",
    "express-basic-auth": "^1.2.1",
    "express-session": "1.18.0",
    "express-ws": "5.0.2",
    "fs-extra": "^11.2.0",
    "http-proxy-middleware": "3.0.0",
    "http-terminator": "3.2.0",
    "memorystore": "1.6.7",
    "node-fetch": "^3.3.2",
    "referrer-policy": "^1.2.0",
    "rxjs": "7.8.1",
    "sequelize": "^6.37.3",
    "simple-oauth2": "5.0.0",
    "sqlite3": "^5.1.7",
    "strip-ansi": "7.1.0",
    "terminate": "2.6.1",
    "ts-import": "4.0.0-beta.10",
    "zustand": "4.5.2"
  },
  "devDependencies": {
    "@amazeelabs/eslint-config": "1.4.43",
    "@types/cookie-parser": "1.4.7",
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "@types/express-session": "1.18.0",
    "@types/express-ws": "3.0.4",
    "@types/fs-extra": "11.0.4",
    "@types/node": "16.18.97",
    "@types/simple-oauth2": "5.0.7",
    "esbuild": "0.21.1",
    "eslint": "9.11.1",
    "nodemon": "3.1.0",
    "rollup": "4.17.2",
    "rollup-plugin-dts": "6.1.0",
    "rollup-plugin-esbuild": "6.1.1",
    "typescript": "5.4.5",
    "vitest": "2.1.1"
  },
  "engines": {
    "node": ">=16"
  }
}
