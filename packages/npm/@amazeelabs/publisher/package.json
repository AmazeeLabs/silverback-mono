{
  "name": "@amazeelabs/publisher",
  "version": "2.4.6",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/exports.cjs",
  "types": "./dist/exports.d.ts",
  "bin": "./bin/publisher.js",
  "scripts": {
    "build": "rollup -c rollup.config.ts --configPlugin typescript",
    "watch": "pnpm build --watch",
    "publisher": "node ./dist/cli.js",
    "start": "nodemon ./dist/cli.js",
    "test:static": "tsc --noEmit && eslint \"**/*.{ts,tsx,js,jsx}\" --ignore-path=\"./.gitignore\" --fix",
    "test:unit": "vitest run",
    "test:integration": "exit 0"
  },
  "dependencies": {
    "@amazeelabs/publisher-elements": "workspace:*",
    "@amazeelabs/publisher-shared": "workspace:*",
    "@amazeelabs/publisher-ui": "workspace:*",
    "@slack/webhook": "^7.0.0",
    "cookie-parser": "1.4.6",
    "cors": "^2.8.5",
    "express": "4.18.2",
    "express-basic-auth": "^1.2.1",
    "express-session": "1.17.3",
    "express-ws": "5.0.2",
    "fs-extra": "^11.1.1",
    "http-proxy-middleware": "2.0.6",
    "http-terminator": "3.2.0",
    "memorystore": "1.6.7",
    "node-fetch": "^3.3.2",
    "referrer-policy": "^1.2.0",
    "rxjs": "7.8.1",
    "sequelize": "^6.33.0",
    "simple-oauth2": "5.0.0",
    "sqlite3": "^5.1.6",
    "strip-ansi": "7.1.0",
    "terminate": "2.6.1",
    "ts-import": "4.0.0-beta.10",
    "zustand": "4.4.3"
  },
  "devDependencies": {
    "@amazeelabs/eslint-config": "1.4.43",
    "@amazeelabs/prettier-config": "1.1.3",
    "@types/cookie-parser": "1.4.4",
    "@types/cors": "2.8.14",
    "@types/express": "4.17.19",
    "@types/express-session": "1.17.8",
    "@types/express-ws": "3.0.2",
    "@types/fs-extra": "11.0.2",
    "@types/node": "16.18.58",
    "@types/simple-oauth2": "5.0.5",
    "esbuild": "0.19.4",
    "eslint": "8.51.0",
    "nodemon": "3.0.1",
    "prettier": "3.0.3",
    "rollup": "4.0.2",
    "rollup-plugin-dts": "6.1.0",
    "rollup-plugin-esbuild": "6.1.0",
    "typescript": "5.2.2",
    "vitest": "0.34.6"
  },
  "engines": {
    "node": ">=16"
  }
}
