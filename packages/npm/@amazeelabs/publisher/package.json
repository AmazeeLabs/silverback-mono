{
  "name": "@amazeelabs/publisher",
  "version": "2.1.19",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/exports.cjs",
  "types": "./dist/exports.d.ts",
  "bin": "./dist/cli.js",
  "scripts": {
    "build": "rollup -c rollup.config.ts --configPlugin typescript",
    "watch": "pnpm build --watch",
    "publisher": "node ./dist/cli.js",
    "start": "nodemon ./dist/cli.js",
    "test:static": "tsc --noEmit && eslint \"**/*.{ts,tsx,js,jsx}\" --ignore-path=\"./.gitignore\" --fix",
    "test:unit": "vitest run",
    "test:integration": "exit 0"
  },
  "dependencies": {
    "@amazeelabs/publisher-elements": "workspace:*",
    "@amazeelabs/publisher-shared": "workspace:*",
    "@amazeelabs/publisher-ui": "workspace:*",
    "@slack/webhook": "^6.1.0",
    "cors": "^2.8.5",
    "express": "4.18.2",
    "express-basic-auth": "^1.2.1",
    "express-ws": "5.0.2",
    "fs-extra": "^11.1.1",
    "http-proxy-middleware": "2.0.6",
    "http-terminator": "3.2.0",
    "node-fetch": "^3.3.1",
    "referrer-policy": "^1.2.0",
    "rxjs": "7.8.1",
    "sequelize": "^6.31.0",
    "simple-oauth2": "5.0.0",
    "sqlite3": "^5.1.6",
    "strip-ansi": "7.0.1",
    "terminate": "2.6.1",
    "ts-import": "4.0.0-beta.10",
    "zustand": "4.3.7"
  },
  "devDependencies": {
    "@amazeelabs/eslint-config": "1.4.43",
    "@amazeelabs/prettier-config": "1.1.3",
    "@types/cors": "2.8.13",
    "@types/express": "4.17.17",
    "@types/express-ws": "3.0.1",
    "@types/fs-extra": "11.0.1",
    "@types/node": "16.18.18",
    "@types/simple-oauth2": "5.0.4",
    "esbuild": "0.17.18",
    "eslint": "8.39.0",
    "nodemon": "2.0.22",
    "prettier": "2.8.8",
    "rollup": "3.21.0",
    "rollup-plugin-dts": "5.3.0",
    "rollup-plugin-esbuild": "5.0.0",
    "rollup-plugin-preserve-shebang": "1.0.1",
    "typescript": "5.0.4",
    "vitest": "0.30.1"
  },
  "engines": {
    "node": ">=16"
  }
}
