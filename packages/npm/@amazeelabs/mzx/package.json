{
  "name": "@amazeelabs/mzx",
  "version": "1.3.0",
  "description": "Executable markdown recipes.",
  "main": "dist/index.js",
  "bin": "./cli.js",
  "license": "MIT",
  "private": false,
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "commander": "^9.4.1",
    "diff": "^5.1.0",
    "fs-extra": "^10.1.0",
    "prompts": "^2.4.2",
    "remark-parse": "^10.0.1",
    "unified": "^10.1.2",
    "zx": "^7.1.1"
  },
  "devDependencies": {
    "@amazeelabs/eslint-config": "^1.4.35",
    "@amazeelabs/prettier-config": "^1.1.1",
    "@rollup/plugin-node-resolve": "15.0.0",
    "@rollup/plugin-typescript": "9.0.1",
    "@types/diff": "5.0.2",
    "@types/prompts": "2.4.1",
    "eslint": "8.25.0",
    "prettier": "2.7.1",
    "rollup": "3.2.2",
    "rollup-plugin-auto-external": "2.0.0",
    "typescript": "4.8.4",
    "vite": "3.1.8",
    "vitest": "0.24.1"
  },
  "scripts": {
    "prepare": "rollup -c rollup.config.js",
    "build:watch": "rollup -c rollup.config.js --watch",
    "precommit": "lint-staged",
    "test:static": "tsc --noEmit && eslint \"**/*.{ts,tsx,js,jsx}\" --ignore-path=\"./.gitignore\" --fix",
    "test:unit": "vitest run --passWithNoTests",
    "test:integration": "PROJECT_NAME=test_project ./cli.js run test.md",
    "test:watch": "vitest",
    "test": "yarn test:static && yarn test:unit && yarn test:integration"
  }
}
