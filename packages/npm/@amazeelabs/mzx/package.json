{
  "name": "@amazeelabs/mzx",
  "version": "1.4.5",
  "description": "Executable markdown recipes.",
  "main": "dist/index.js",
  "bin": "./cli.js",
  "license": "MIT",
  "private": false,
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "commander": "^9.5.0",
    "diff": "^5.1.0",
    "fs-extra": "^11.1.0",
    "js-yaml": "^4.1.0",
    "prompts": "^2.4.2",
    "remark-parse": "^10.0.1",
    "unified": "^10.1.2",
    "zx": "^7.1.1"
  },
  "devDependencies": {
    "@amazeelabs/eslint-config": "^1.4.39",
    "@amazeelabs/prettier-config": "^1.1.1",
    "@rollup/plugin-node-resolve": "15.0.1",
    "@rollup/plugin-typescript": "10.0.1",
    "@types/diff": "5.0.2",
    "@types/fs-extra": "9.0.13",
    "@types/js-yaml": "4.0.5",
    "@types/mdast": "^3.0.10",
    "@types/prompts": "2.4.2",
    "eslint": "8.31.0",
    "prettier": "2.8.2",
    "rollup": "3.10.0",
    "rollup-plugin-auto-external": "2.0.0",
    "typescript": "4.9.4",
    "vite": "4.0.4",
    "vitest": "0.27.1"
  },
  "scripts": {
    "build": "rollup -c rollup.config.js",
    "build:watch": "rollup -c rollup.config.js --watch",
    "precommit": "lint-staged",
    "test:static": "tsc --noEmit && eslint \"**/*.{ts,tsx,js,jsx}\" --ignore-path=\"./.gitignore\" --fix",
    "test:unit": "vitest run --passWithNoTests",
    "test:integration": "PROJECT_NAME=test_project ./cli.js run test.md",
    "test:watch": "vitest"
  }
}
