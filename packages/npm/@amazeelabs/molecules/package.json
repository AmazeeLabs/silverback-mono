{
  "name": "@amazeelabs/molecules",
  "version": "0.5.1",
  "type": "module",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "private": false,
  "sideEffects": false,
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "prepare": "yarn build",
    "precommit": "lint-staged",
    "test:static": "tsc --noEmit && eslint \"**/*.{ts,tsx,js,jsx}\" --ignore-path=\"./.gitignore\" --fix",
    "test:unit": "vitest run --passWithNoTests",
    "test:integration": "exit 0",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test": "yarn test:static && yarn test:unit && yarn test:integration",
    "storybook": "NODE_OPTIONS=--openssl-legacy-provider start-storybook -p 6007 --ci",
    "build-storybook": "NODE_OPTIONS=--openssl-legacy-provider build-storybook",
    "deploy": "yarn build-storybook && yarn netlify deploy -a $NETLIFY_AUTH_TOKEN -d storybook-static -p -s amazeelabs-molecules"
  },
  "peerDependencies": {
    "react": ">=18.2.0",
    "react-dom": ">=18.2.0",
    "zustand": "^4.1.4"
  },
  "devDependencies": {
    "@amazeelabs/eslint-config": "^1.4.36",
    "@amazeelabs/jest-preset": "^1.3.40",
    "@amazeelabs/prettier-config": "^1.1.1",
    "@babel/core": "7.19.6",
    "@storybook/addon-actions": "6.5.13",
    "@storybook/addon-essentials": "6.5.13",
    "@storybook/addon-interactions": "6.5.13",
    "@storybook/addon-links": "6.5.13",
    "@storybook/builder-vite": "0.2.5",
    "@storybook/react": "6.5.13",
    "@storybook/testing-library": "0.0.13",
    "@testing-library/react": "13.4.0",
    "@types/react": "18.0.24",
    "@types/react-dom": "18.0.8",
    "@vitejs/plugin-react": "2.2.0",
    "@vitest/ui": "0.24.5",
    "babel-loader": "9.1.0",
    "eslint": "8.26.0",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-storybook": "0.6.7",
    "happy-dom": "7.7.0",
    "lodash": "4.17.21",
    "netlify-cli": "12.0.11",
    "postcss": "8.4.18",
    "prettier": "2.7.1",
    "storybook": "7.0.0-alpha.47",
    "tailwindcss": "3.2.1",
    "typescript": "4.8.4",
    "vite": "3.2.2",
    "vite-imagetools": "4.0.11",
    "vite-plugin-dts": "1.6.6",
    "vitest": "0.24.5"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.4",
    "clsx": "^1.2.1",
    "gsap": "^3.11.3"
  }
}
