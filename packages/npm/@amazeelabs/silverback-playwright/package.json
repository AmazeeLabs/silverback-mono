{
  "name": "@amazeelabs/silverback-playwright",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "version": "1.6.2",
  "description": "Helps running Playwright tests on Silverback setups.",
  "author": "Amazee Labs",
  "license": "MIT",
  "private": false,
  "sideEffects": false,
  "dependencies": {
    "@playwright/test": "^1.14.1",
    "axios": "^0.21.1",
    "cross-port-killer": "^1.3.0",
    "tcp-port-used": "^1.0.2",
    "zx": "^4.0.0"
  },
  "devDependencies": {
    "@amazeelabs/eslint-config": "^1.4.4",
    "@amazeelabs/jest-preset": "^1.3.10",
    "@amazeelabs/prettier-config": "^1.1.1",
    "@types/jest": "^27",
    "@types/tcp-port-used": "^1.0.0",
    "eslint": "^7",
    "jest": "^27",
    "lint-staged": "^11.1.2",
    "prettier": "^2",
    "prompts": "^2.4.2",
    "ts-jest": "^27",
    "typescript": "^4.4.4"
  },
  "scripts": {
    "prepare": "rm -rf dist && tsc && chmod +x dist/src/test-package.js",
    "precommit": "lint-staged",
    "test": "yarn test:static && yarn test:unit && yarn test:integration",
    "watch": "jest --watch",
    "test:static": "tsc --noEmit && eslint \"**/*.{ts,tsx,js,jsx}\" --ignore-path=\"./.gitignore\" --fix",
    "test:unit": "jest --passWithNoTests",
    "test:integration": "if [ -f test.sh ]; then ./test.sh; fi",
    "test:watch": "jest --watch"
  },
  "bin": {
    "sp-test": "dist/src/test-package.js"
  }
}
