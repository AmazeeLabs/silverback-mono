{
  "compilerOptions": {
    "noEmit": false,
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": false,
    "jsx": "react",
    "outDir": ".",
    "rootDir": "src",
    "target": "ES2017",
    "declaration": true,
    "declarationDir": "."
  },
  "exclude": ["node_modules", "playwright-tests", "src/tests"],
  "include": ["src"],
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended"
}
