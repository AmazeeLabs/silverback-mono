  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/index.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "scripts": {
    "prepublishOnly": "tsc",
    "pretest": "tsc && yarn lint && yarn formatting",
    "test": "jest --coverage && ./test",
    "lint": "eslint '*/**.ts'",
    "formatting": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\""
  }
