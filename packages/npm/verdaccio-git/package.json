    "jest": "^26.6.3",
    "mock-fs": "^4.13.0",
    "prettier": "^2.1.2",
    "standard-version": "^9.0.0",
    "verdaccio": "^4.8.1"
  },
  "keywords": [
    "verdaccio,plugin,storage,git,verdaccio-git"
  ],
  "license": "MIT",
  "repository": "AmazeeLabs/storage-git",
  "author": "Philipp Melab <philipp.melab@amazee.com>",
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/index.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "scripts": {
    "prepublishOnly": "tsc",
    "pretest": "tsc && yarn lint && yarn formatting",
    "test": "jest --coverage && ./test",
    "lint": "eslint '*/**.ts'",
    "formatting": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\""
  }
}
