{
  "name": "verdaccio-git",
  "version": "0.1.69",
  "description": "Publish packages to git repositories.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/"
  ],
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "@verdaccio/commons-api": "^10.2.0",
    "@verdaccio/local-storage": "^10.3.1",
    "@verdaccio/streams": "^10.2.0",
    "file-system": "^2.2.2",
    "fs-extra": "^10.1.0",
    "simple-git": "^3.14.1",
    "sync-directory": "^5.1.9",
    "tar": "^6.1.12"
  },
  "devDependencies": {
    "@babel/preset-env": "7.19.4",
    "@babel/preset-typescript": "7.18.6",
    "@tsconfig/recommended": "1.0.1",
    "@types/express": "4.17.14",
    "@types/fs-extra": "9.0.13",
    "@types/jest": "29.2.1",
    "@types/mock-fs": "4.13.1",
    "@types/node": "16.18.3",
    "@types/tar": "6.1.3",
    "@typescript-eslint/eslint-plugin": "5.42.0",
    "@verdaccio/types": "10.7.0",
    "eslint": "8.26.0",
    "jest": "29.2.2",
    "mock-fs": "5.2.0",
    "prettier": "2.7.1",
    "standard-version": "9.5.0",
    "verdaccio": "5.15.4"
  },
  "keywords": [
    "verdaccio,plugin,storage,git,verdaccio-git"
  ],
  "license": "MIT",
  "repository": "AmazeeLabs/storage-git",
  "author": "Philipp Melab <philipp.melab@amazee.com>",
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/index.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "scripts": {
    "prepare": "tsc",
    "pretest": "tsc && yarn lint && yarn formatting",
    "test:unit": "jest --coverage",
    "test:integration": "./test",
    "lint": "eslint '*/**.ts'",
    "formatting": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\""
  }
}
