    "file-system": "^2.2.2",
    "fs-extra": "^11.2.0",
    "simple-git": "^3.24.0",
    "sync-directory": "^6.0.5",
    "tar": "^6.2.1"
  },
  "devDependencies": {
    "@amazeelabs/eslint-config": "1.4.43",
    "@babel/preset-env": "7.24.5",
    "@babel/preset-typescript": "7.24.1",
    "@tsconfig/recommended": "1.0.6",
    "@types/express": "4.17.21",
    "@types/fs-extra": "11.0.4",
    "@types/jest": "29.5.12",
    "@types/mock-fs": "4.13.4",
