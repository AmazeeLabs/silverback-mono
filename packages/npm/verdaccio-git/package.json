{
  "name": "verdaccio-git",
  "version": "0.1.49",
  "description": "Publish packages to git repositories.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/"
  ],
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "@verdaccio/commons-api": "^10.2.0",
    "@verdaccio/local-storage": "^10.2.0",
    "@verdaccio/streams": "^10.2.0",
    "file-system": "^2.2.2",
    "fs-extra": "^10.0.0",
    "simple-git": "^3.1.0",
    "sync-directory": "^4.0.12",
    "tar": "^6.1.11"
  },
  "devDependencies": {
    "@babel/preset-env": "7.16.11",
    "@babel/preset-typescript": "7.16.7",
    "@tsconfig/recommended": "1.0.1",
    "@types/express": "4.17.13",
    "@types/fs-extra": "9.0.13",
    "@types/jest": "27.4.0",
    "@types/mock-fs": "4.13.1",
    "@types/node": "16.11.25",
    "@types/tar": "6.1.1",
    "@typescript-eslint/eslint-plugin": "5.12.0",
    "@verdaccio/types": "10.3.0",
    "eslint": "8.9.0",
    "jest": "27.5.1",
    "mock-fs": "5.1.2",
    "prettier": "2.5.1",
    "standard-version": "9.3.2",
    "verdaccio": "5.6.0"
  },
  "keywords": [
    "verdaccio,plugin,storage,git,verdaccio-git"
  ],
  "license": "MIT",
  "repository": "AmazeeLabs/storage-git",
  "author": "Philipp Melab <philipp.melab@amazee.com>",
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/index.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "scripts": {
    "prepare": "tsc",
    "pretest": "tsc && yarn lint && yarn formatting",
    "test:unit": "jest --coverage",
    "test:integration": "./test",
    "lint": "eslint '*/**.ts'",
    "formatting": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\""
  }
}
