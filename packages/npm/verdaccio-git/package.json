  "files": [
    "lib/"
  ],
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "@verdaccio/commons-api": "^10.2.0",
    "@verdaccio/local-storage": "10.3.3",
    "@verdaccio/streams": "^10.2.1",
    "file-system": "^2.2.2",
    "fs-extra": "^11.1.1",
    "simple-git": "^3.19.0",
    "sync-directory": "^6.0.4",
    "tar": "^6.1.15"
  },
  "devDependencies": {
    "@amazeelabs/eslint-config": "1.4.43",
    "@babel/preset-env": "7.22.5",
    "@babel/preset-typescript": "7.22.5",
    "@tsconfig/recommended": "1.0.2",
    "@types/express": "4.17.17",
    "@types/fs-extra": "11.0.1",
    "@types/jest": "29.5.2",
    "@types/mock-fs": "4.13.1",
    "@types/node": "16.18.36",
    "@types/tar": "6.1.5",
    "@typescript-eslint/eslint-plugin": "5.59.11",
    "@verdaccio/types": "10.8.0",
    "eslint": "8.42.0",
    "jest": "29.5.0",
    "mock-fs": "5.2.0",
    "prettier": "2.8.8",
    "standard-version": "9.5.0",
    "typescript": "5.1.3",
    "verdaccio": "5.25.0"
  },
  "keywords": [
    "verdaccio,plugin,storage,git,verdaccio-git"
  ],
  "license": "MIT",
  "repository": "AmazeeLabs/storage-git",
  "author": "Philipp Melab <philipp.melab@amazee.com>",
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/index.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "scripts": {
    "build": "tsc",
    "pretest": "tsc && pnpm lint && pnpm formatting",
    "test:unit": "jest --coverage",
    "test:integration": "./test",
    "lint": "eslint '*/**.ts'",
    "formatting": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\""
  }
}
