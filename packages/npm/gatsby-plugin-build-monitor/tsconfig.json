{
  "compilerOptions": {
    "noEmit": false,
    "target": "ES2015",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": false,
    "jsx": "react",
    "rootDir": "src",
    "outDir": "./",
    "declaration": true
  },
  "include": ["src"],
  "exclude": [],
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended"
}
